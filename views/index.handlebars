<h1>NJIB'S BOOTCAMP BURGER BAR</h1>

<form class="create-form">
  <div class='order-grid'>
    <div class='grid-item'>
      <div class="form-group">
        <h2>Order a Burger</h2>
        <label for="ca">What type of burger would you like?</label>
        <input type="text" id="ca" name="name">
      </div>
    </div>

    <div class='grid-item'>
      <button type="submit">Order burger</button>
    </div>
  </div>
</form>

<div class='grid'>
  <div class='grid-item'>
    <h2>Burgers that have not been eaten</h2>

    <ul>
      {{#each burgers}}
      {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class='grid-item'>
    <h2>Burgers that have been eaten</h2>

    <ul>
      {{#each burgers}}
      {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>